; str standard library

(: (str-blank? s)
   (= s ''))

(: (str-reverse s)
   (if (str-blank? s)
     ''
     (+ (str-reverse (str-slice s 1 (str-size s)))
        (str-get s 0))))

(: (str-reduce s f acc)
   (do
     (: max (str-size v))
     (: (sub i acc)
        (if (< i max)
          (sub (+ i 1)
               (f (str-get v i) acc i))
          acc))
     (sub 0 acc)))

(: (str-join v pad)
   (if (vec-empty? v)
     ''
     (vec-reduce (vec-tail v)
                 (: (f s acc)
                    (+ acc (+ pad s)))
                 (vec-head v))))

